<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jyt="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="13dp"
    android:orientation="vertical"
    android:background="@color/bg_content"
    tools:context="com.jyt.baseapp.view.activity.SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:paddingRight="13dp"
        android:orientation="horizontal">
        <com.jyt.baseapp.view.widget.SearchView
            android:id="@+id/sv_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            jyt:bg_color="#343434"
            jyt:logo="@mipmap/icon_seach2"
            jyt:hint="搜索"
            jyt:hintColor="@color/white"
            jyt:TextColor="@color/white">
        </com.jyt.baseapp.view.widget.SearchView>
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="59dp"
            android:layout_height="27dp"
            android:gravity="center"
            android:layout_marginLeft="13dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:text="搜索"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:background="@drawable/corner_p28"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingRight="13dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史记录"
            android:textSize="13dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_search_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="清除记录"
            android:textSize="13dp"
            android:textColor="#AAAAAA"/>
    </RelativeLayout>
    <com.nex3z.flowlayout.FlowLayout
        android:layout_marginTop="13dp"
        android:paddingRight="13dp"
        android:id="@+id/flow_search_history"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        jyt:childSpacing="10dp"
        jyt:rowSpacing="10dp">
    </com.nex3z.flowlayout.FlowLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关键词"
        android:textSize="12dp"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:paddingLeft="20dp"
        android:paddingRight="34dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_search_male"
            android:layout_width="88dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:text="男"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:background="@drawable/corners_g5"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_search_female"
            android:layout_width="88dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:text="女"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:background="@drawable/corners_g5"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_search_sex"
            android:layout_width="88dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:text="不限"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:background="@drawable/corner_w5"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_search_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_marginTop="29dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="年龄"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_search_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不限"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="6dp"
            android:layout_height="3dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/btn_down"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#646464"
        android:layout_marginTop="14dp"/>
    <!--年龄结束-->
    <LinearLayout
        android:id="@+id/ll_search_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="城市"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_search_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不限"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="6dp"
            android:layout_height="3dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/btn_down"/>
    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#646464"
        android:layout_marginTop="14dp"/>
    <!--城市结束-->
    <LinearLayout
        android:id="@+id/ll_search_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="金币"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_search_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不限"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="6dp"
            android:layout_height="3dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/btn_down"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#646464"
        android:layout_marginTop="14dp"/>
    <!--金币结束-->
    <LinearLayout
        android:id="@+id/ll_search_comm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="聊天方式"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_search_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不限"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="6dp"
            android:layout_height="3dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/btn_down"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#646464"
        android:layout_marginTop="14dp"/>
    <!--聊天方式结束-->
    <LinearLayout
        android:id="@+id/ll_search_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="在线时间"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_search_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不限"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="6dp"
            android:layout_height="3dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/btn_down"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#646464"
        android:layout_marginTop="14dp"/>
    <!--在线时间结束-->
    <Button
        android:id="@+id/btn_search"
        android:layout_width="285dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="31dp"
        android:layout_gravity="center_horizontal"
        android:text="查找"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/corner_pp62"/>
</LinearLayout>
