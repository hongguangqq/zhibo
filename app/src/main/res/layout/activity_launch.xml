<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jyt.baseapp.view.activity.LaunchActivity">
    <com.jyt.baseapp.view.widget.RoundLayout
        android:id="@+id/ro_launch"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="272dp"
        app:roundLayoutRadius="12">
        <ImageView
            android:id="@+id/iv_launch_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_ht12"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/corner_ht12"/>
        <com.jyt.baseapp.view.widget.CircleImageView
            android:id="@+id/iv_launch_hpic"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/timg"
            app:border_color="@color/white"/>
        <ImageView
            android:id="@+id/iv_launch_sex"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignBottom="@+id/iv_launch_hpic"
            android:layout_alignRight="@+id/iv_launch_hpic"
            android:src="@mipmap/icon_nv2"/>
        <TextView
            android:id="@+id/tv_launch_name"
            android:layout_below="@id/iv_launch_hpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_centerHorizontal="true"
            android:text="小妮子"
            android:textSize="19dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_launch_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_launch_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="拨号中···"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/pb_launch_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_below="@+id/tv_launch_star"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="11dp"
            android:max="400"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar_drawable"
            android:visibility="gone"/>
    </com.jyt.baseapp.view.widget.RoundLayout>

    <Button
        android:id="@+id/btn_launch_star"
        android:layout_below="@+id/ro_launch"
        android:layout_centerHorizontal="true"
        android:layout_width="351dp"
        android:layout_height="95dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="挂断"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@drawable/corner12"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="请勿散播色情、暴力、反动言论"
        android:textSize="15dp"
        android:textColor="@color/white"/>
</RelativeLayout>
