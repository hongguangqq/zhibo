<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#5c5c5c">

    <TextView
        android:id="@+id/tv_hgift_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:text="04/20  23:23"
        android:textSize="13dp"
        android:textColor="#FFA1A1A1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp">
        <com.jyt.baseapp.view.widget.CircleImageView
            android:id="@+id/iv_hgift_send"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@mipmap/timg"
            app:border_color="@color/white"/>
        <TextView
            android:id="@+id/tv_hgift_send"
            android:layout_toRightOf="@id/iv_hgift_send"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:text="皮皮羊"
            android:singleLine="true"
            android:textSize="11dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_hgift_receiver"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="皮皮羊"
            android:singleLine="true"
            android:textSize="11dp"
            android:textColor="@color/white"/>

        <com.jyt.baseapp.view.widget.CircleImageView
            android:id="@+id/iv_hgift_receiver"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@+id/tv_hgift_receiver"
            android:src="@mipmap/timg"
            app:border_color="@color/white"/>

        <ImageView
            android:id="@+id/iv_hgift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_gift3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_hgift"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="送"
            android:textSize="11dp"
            android:textColor="#FFA1A1A1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_hgift"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="给"
            android:textSize="11dp"
            android:textColor="#FFA1A1A1"/>

    </RelativeLayout>


</LinearLayout>