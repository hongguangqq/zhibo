<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<com.jyt.baseapp.view.widget.CircleImageView
    android:id="@+id/iv_me_hpic"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="12dp"
    app:border_color="@color/white"
    android:src="@mipmap/timg"/>
    <ImageView
        android:id="@+id/iv_san"
        android:layout_toLeftOf="@id/iv_me_hpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@mipmap/icon_rsan"/>
<TextView
    android:id="@+id/tv_me_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@id/iv_san"
    android:paddingLeft="18dp"
    android:paddingRight="8dp"
    android:paddingTop="13dp"
    android:paddingBottom="13dp"
    android:text="你好哦在吗？内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容。"
    android:textSize="12dp"
    android:textColor="@color/black"
    android:background="@drawable/com_me"/>
</RelativeLayout>