<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<com.jyt.baseapp.view.widget.CircleImageView
    android:id="@+id/iv_me_hpic"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="12dp"
    app:border_color="@color/white"
    android:src="@mipmap/timg"/>
    <ImageView
        android:id="@+id/iv_san"
        android:layout_toLeftOf="@id/iv_me_hpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/icon_rsan"/>
    <TextView
        android:id="@+id/tv_me_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_san"
        android:layout_marginTop="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:maxWidth="207dp"
        android:text=""
        android:textSize="12dp"
        android:textColor="@color/black"
        android:background="@drawable/com_me"/>
    <LinearLayout
        android:id="@+id/ll_me_voice"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_san">
        <TextView
            android:id="@+id/tv_me_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dp"
            android:text="3"
            android:textSize="12dp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:src="@mipmap/icon_voice_play"
            android:background="@drawable/com_me"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_me_img"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/iv_san"
        android:scaleType="centerCrop"/>

</RelativeLayout>