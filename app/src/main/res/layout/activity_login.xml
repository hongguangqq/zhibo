<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context="com.jyt.baseapp.view.activity.entrance.LoginActivity">


    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="121dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="374dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="70dp"
            android:background="@drawable/corner12">
            <EditText
                android:id="@+id/et_login_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:singleLine="true"
                android:hint="请输入账号"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/et_hint2"
                android:background="@null"/>
            <View
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/et_hint1"/>
            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:hint="请输入密码"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/et_hint2"
                android:background="@null"/>
            <View
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/et_hint1"/>
            <Button
                android:id="@+id/btn_login_submit"
                android:layout_width="285dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="39dp"
                android:text="登录"
                android:textColor="@color/white"
                android:background="@drawable/btn_bg1"/>
            <Button
                android:id="@+id/btn_login_register"
                android:layout_width="285dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="注册"
                android:textColor="@color/btn_press"
                android:background="@drawable/btn_normal"/>
            <!--相关规定-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="22dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"

                    android:textColor="#4DFFFFFF"
                    android:text="点击登录或注册即表明同意遵守本软件的"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp">
                    <TextView
                        android:id="@+id/tv_ruler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="#ed30aa"
                        android:text="相关规定"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_alignBottom="@+id/tv_ruler"
                        android:layout_alignEnd="@+id/tv_ruler"
                        android:layout_alignStart="@+id/tv_ruler"
                        android:background="#ed30aa"
                        android:minWidth="4dp" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_login_repwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="1dp"
            android:text="忘记密码"
            android:textSize="14dp"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:layout_width="55dp"
                android:layout_height="1dp"
                android:background="#48464646"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他方式登录"
                android:textSize="14dp"
                android:textColor="#A11F1F1F"/>
            <View
                android:layout_width="55dp"
                android:layout_height="1dp"
                android:background="#48464646"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_login_qq"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@mipmap/icon_qq"/>
            <View
                android:layout_width="42dp"
                android:layout_height="1dp"/>
            <ImageView
                android:id="@+id/iv_login_chat"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@mipmap/icon_wechat"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_marginTop="74dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/pic_app"/>


</RelativeLayout>
