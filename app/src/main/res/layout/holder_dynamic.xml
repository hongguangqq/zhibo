<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="13dp"
    android:background="@drawable/corner12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <com.jyt.baseapp.view.widget.CircleImageView
            android:id="@+id/iv_hdynamic_hpic"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:border_width="0dp"
            android:src="@mipmap/timg"/>
        <TextView
            android:id="@+id/tv_hdynamic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text=""
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_hdynamic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text=""
            android:textColor="#79FFFFFF"
            android:textSize="12dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_hdynamic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text=""
        android:textSize="14dp"
        android:textColor="@color/white"/>
    <RelativeLayout
        android:id="@+id/rl_hdynamic_videio"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_hdynamic_video"
        android:layout_width="95dp"
        android:layout_height="95dp"/>
    <ImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:src="@mipmap/icon_xuanchu"/>
    </RelativeLayout>
    <com.jyt.baseapp.view.widget.SlFlowLayout
        android:id="@+id/flow_hdynamic_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
    </com.jyt.baseapp.view.widget.SlFlowLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="#20FFFFFF"/>
    <ImageView
        android:id="@+id/iv_hdynamic_zang"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="9dp"
        android:layout_gravity="right"
        android:src="@mipmap/btn_xihuan"/>
</LinearLayout>