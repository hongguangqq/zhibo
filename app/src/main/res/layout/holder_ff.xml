<?xml version="1.0" encoding="utf-8"?>
<!--parent padding_left:20dp-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/bg_color1">
    <com.jyt.baseapp.view.widget.CircleImageView
        android:id="@+id/iv_ff_hpic"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@mipmap/timg"
        android:layout_centerVertical="true"
        app:border_width="0dp"
        app:border_color="@color/white"/>
    <RelativeLayout
        android:layout_toRightOf="@id/iv_ff_hpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:id="@+id/ll_ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ff_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线"
                android:textSize="11dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/white"
                android:background="@drawable/corner_pp62"/>
            <TextView
                android:id="@+id/tv_ff_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="小娜"
                android:textSize="15dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_ff_mark"
            android:layout_below="@id/ll_ff"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="我在这等你"
            android:textSize="14dp"
            android:textColor="#B2B2B2"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_ff_video"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:src="@mipmap/btn_video"/>
    <Button
        android:id="@+id/btn_appoint_text"
        android:visibility="gone"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:text="取消预约"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:background="@drawable/corner_p100"/>
    <LinearLayout
        android:id="@+id/ll_con_content"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp">
        <TextView
            android:id="@+id/tv_con_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频呼入"
            android:textSize="12dp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/iv_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:src="@mipmap/icon_vin"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_new_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5分钟前"
        android:textSize="12dp"
        android:textColor="#B2B2B2"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"/>
</RelativeLayout>