<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:gravity="center_horizontal"
    android:background="@color/transparent"
    tools:context="com.jyt.baseapp.view.activity.entrance.RegisterActivity">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="27dp"
        android:paddingBottom="10dp"
        
        android:background="@drawable/corner12"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:layout_width="63dp"
            android:layout_height="42dp"
            android:src="@mipmap/pic_mingpian"/>
        <EditText
            android:id="@+id/et_at_name"
            android:layout_marginTop="41dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="请输入姓名"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/et_hint2"
            android:background="@null"/>
        <View
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/et_hint1"/>

        <EditText
            android:id="@+id/et_at_card"
            android:layout_marginTop="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:hint="请输入身份证号码"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/et_hint2"
            android:background="@null"/>
        <View
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/et_hint1"/>

        <!--<EditText
            android:id="@+id/et_at_tel"
            android:layout_marginTop="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号码"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/et_hint2"
            android:background="@null"/>
        <View
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/et_hint1"/>-->
        <LinearLayout
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_at_vcode"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="请输入验证码"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/et_hint2"
                    android:background="@null"/>
                <TextView
                    android:id="@+id/tv_at_getcode"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="获取验证码"
                    android:textSize="15dp"
                    android:textColor="@color/text_press"/>
            </LinearLayout>
            <View
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/et_hint1"/>
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="手持身份证照片"
            android:textColor="#FFFFFF"
            android:textSize="15dp"/>

        <FrameLayout
            android:id="@+id/fl_at_photo"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_marginTop="9dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1CFFFFFF"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="41dp"
                    android:src="@mipmap/pic_wutu"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="从相册中上传/拍照"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_at_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="点击查看实名主播相关条款"
            android:textColor="#FFFFFFFF"
            android:textSize="12dp"/>

    </LinearLayout>

</LinearLayout>
