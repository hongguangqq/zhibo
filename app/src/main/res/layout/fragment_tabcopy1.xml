<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sl_tab1_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:clipToPadding="false"
    android:background="@color/bg_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_tab1_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:text="动态"
                android:textSize="13dp"
                android:textColor="@color/white"/>
            <LinearLayout
                android:id="@+id/ll_tab1_search"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginLeft="13dp"
                android:background="@drawable/corner_gray28">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/btn_seach"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_tab1_search"
                android:layout_width="62dp"
                android:layout_height="24dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical">
                <com.jyt.baseapp.view.widget.SwitchView
                    android:id="@+id/sv_tab1_state"
                    android:layout_centerVertical="true"
                    android:layout_width="62dp"
                    android:layout_height="24dp"
                    app:sv_darkColor="#FF7799"
                    app:sv_lightColor="#B9B9B9"/>
                <TextView

                    android:id="@+id/tv_tab1_stateOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="在线"
                    android:textSize="13dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_tab1_stateOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"
                    android:text="忙碌"
                    android:textSize="13dp"
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <View
                android:layout_width="6dp"
                android:layout_height="1dp"/>
        </LinearLayout>
        <!--标题栏结束-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <android.support.v4.view.ViewPager
                android:id="@+id/vp_tab1_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>
            <LinearLayout
                android:id="@+id/ll_tab1_banner"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp">
            </LinearLayout>
        </RelativeLayout>
        <!--Pager栏结束-->
        <LinearLayout
            android:id="@+id/ll_tab1_focus"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/icon_liebiao_guanzhu"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="关注列表"
                android:textSize="13dp"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:src="@mipmap/next_little_white"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <com.jyt.baseapp.view.widget.SlFlowLayout
            android:id="@+id/flow_tab1_focus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.jyt.baseapp.view.widget.SlFlowLayout>
        <!--关注列表结束-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_tab1_themeParent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_tab1_theme"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/icon_liebiao_huodong"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="主题活动"
                        android:textSize="13dp"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/next_little_white"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
                <com.jyt.baseapp.view.widget.SlFlowLayout
                    android:id="@+id/flow_tab1_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab1_hotParent"
                android:layout_below="@+id/ll_tab1_themeParent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_tab1_hot"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/icon_liebiao_remen"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="热门列表"
                        android:textSize="13dp"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/next_little_white"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
                <com.jyt.baseapp.view.widget.SlFlowLayout
                    android:id="@+id/flow_tab1_hot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.jyt.baseapp.view.widget.SlFlowLayout>
            </LinearLayout>
            <!--热门列表结束-->
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_tab1_user"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_tab1_ulogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/icon_liebiao_nanyonghu"/>
            <TextView
                android:id="@+id/tv_tab1_user"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="男用户列表"
                android:textSize="13dp"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:src="@mipmap/next_little_white"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <com.jyt.baseapp.view.widget.SlFlowLayout
            android:id="@+id/flow_tab1_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.jyt.baseapp.view.widget.SlFlowLayout>
        <!--用户列表结束-->

        <LinearLayout
            android:id="@+id/ll_tab1_recommend"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/icon_liebiao_tuijian"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="推荐列表"
                android:textSize="13dp"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:src="@mipmap/next_little_white"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <com.jyt.baseapp.view.widget.SlFlowLayout
            android:id="@+id/flow_tab1_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.jyt.baseapp.view.widget.SlFlowLayout>
        <!--推荐列表结束-->




    </LinearLayout>
</ScrollView>