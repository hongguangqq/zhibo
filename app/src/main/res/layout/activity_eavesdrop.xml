<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jyt.baseapp.view.activity.LaunchActivity">
    <com.jyt.baseapp.view.widget.RoundLayout
        android:id="@+id/ro_answer"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="272dp"
        app:roundLayoutRadius="12">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_ht12"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/corner_ht12"/>
        <com.jyt.baseapp.view.widget.CircleImageView
            android:id="@+id/iv_eavesdrop_hpic"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/pic_tonghuahzong"
            app:border_color="@color/white"/>

        <TextView
            android:id="@+id/tv_eavesdrop_time"
            android:layout_below="@id/iv_eavesdrop_hpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="25dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_eavesdrop_money"
            android:layout_below="@id/tv_eavesdrop_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:text="200金币"
            android:textColor="#FFFFFFFF"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/tv_eavesdrop_num"
            android:layout_below="@id/tv_eavesdrop_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:text="偷听人数"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp"/>

    </com.jyt.baseapp.view.widget.RoundLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ro_answer"
        android:layout_marginTop="28dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <Button
            android:id="@+id/btn_eavesdrop_close"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="挂断"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/corner_r12"/>
        <View
            android:layout_width="15dp"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/btn_eavesdrop_switch"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="换一批"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/corner_p12"/>
    </LinearLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="请勿散播色情、暴力、反动言论"
        android:textSize="15dp"
        android:textColor="@color/white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_eavesdrop_bottom"
        android:orientation="horizontal">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_eavesdrop_s1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible">
        </android.support.v7.widget.RecyclerView>
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_eavesdrop_s2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible">
        </android.support.v7.widget.RecyclerView>
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_eavesdrop_s3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_eavesdrop_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_eavesdrop_t1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_white12"
            android:gravity="center"
            android:text="提醒"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_eavesdrop_t2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_white12"
            android:gravity="center"
            android:text="鼓励"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_eavesdrop_t3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_white12"
            android:gravity="center"
            android:text="调笑"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"/>
    </LinearLayout>

</RelativeLayout>
