<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jyt.baseapp.view.activity.LaunchActivity">
    <LinearLayout
        android:id="@+id/ro_call"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:background="@drawable/corner12">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/pic_tonghuahzong"/>
        <TextView
            android:id="@+id/tv_call_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_gravity="center_horizontal"
            android:text="10 : 59"
            android:textSize="25dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_call_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="200金币"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_eavesdrop_num"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_gravity="center_horizontal"
            android:text="10人与您一起偷听"
            android:textSize="20dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_call_hangup"
        android:layout_width="match_parent"
        android:layout_below="@+id/ro_call"
        android:layout_height="95dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/corner_r12">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="14dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/icon_guaduan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="挂断"
            android:textColor="#D4FFFFFF"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_eavesdrop_hangup"
        android:visibility="gone"
        android:layout_below="@+id/ro_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/corner_r12">
            <ImageView
                android:layout_width="44dp"
                android:layout_height="14dp"
                android:layout_marginTop="25dp"
                android:src="@mipmap/icon_guaduan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="挂断"
                android:textColor="#D4FFFFFF"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="95dp"
            android:layout_marginLeft="11dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="@drawable/corner_p12">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_huanyige"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="换一批"
                android:textColor="#D4FFFFFF"
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_eavesdrop_slogan"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="快速聊天"
        android:textSize="15dp"
        android:textColor="@color/white"/>
</RelativeLayout>
