<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    tools:context="com.jyt.baseapp.view.activity.RechargeActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:text="充值金额"
        android:textSize="13dp"
        android:textColor="@color/white"
        android:background="#3E3E3E"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="@color/bg_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/rl_recharge_money1"
            android:layout_width="155dp"
            android:layout_height="87dp"
            android:background="@mipmap/pic_chongzhi_nol">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="21dp"
                android:text="1000币\n￥100.00"
                android:textColor="@color/white"
                android:textSize="15dp"/>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:id="@+id/rl_recharge_money2"
            android:layout_width="155dp"
            android:layout_height="87dp"
            android:background="@mipmap/pic_chongzhi_nol">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="23dp"
                android:text="2000币\n￥200.00"
                android:textColor="@color/white"
                android:textSize="15dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="@color/bg_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/rl_recharge_money3"
            android:layout_width="155dp"
            android:layout_height="87dp"
            android:background="@mipmap/pic_chongzhi_nol">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="28dp"
                android:text="10000币\n￥1000.00"
                android:textColor="@color/white"
                android:textSize="15dp"/>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:id="@+id/rl_recharge_money4"
            android:layout_width="155dp"
            android:layout_height="87dp"
            android:background="@mipmap/pic_chongzhi_nol">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="32dp"
                android:text="20000币\n￥2000.00"
                android:textColor="@color/white"
                android:textSize="15dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_recharge_input"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/corners_g10"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/icon_bi"/>
        <EditText
            android:id="@+id/et_recharge_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:singleLine="true"
            android:hint="请输入充值金额"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="@color/et_hint2"
            android:background="@null"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:paddingLeft="13dp"
        android:text="支付方式"
        android:textSize="13dp"
        android:textColor="@color/white"
        android:background="#3E3E3E"/>
    <RelativeLayout
        android:id="@+id/rl_recharge_z"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="13dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_recharge_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zhifubao"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_recharge_z"
            android:layout_marginLeft="10dp"
            android:text="支付宝"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/iv_recharge1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_xuanzhong"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13dp"
        android:background="#646464"/>
    <RelativeLayout
        android:id="@+id/rl_recharge_w"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="13dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_recharge_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/weixinzhifu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_recharge_w"
            android:layout_marginLeft="10dp"
            android:text="微信"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/iv_recharge2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_xuanzhong_no"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_recharge"
        android:layout_width="285dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:text="立刻充值"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@drawable/corner_pp62"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
